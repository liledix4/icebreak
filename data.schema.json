{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["$schema", "more_to_come", "tasks"],
  "properties": {
    "$schema": {
      "type": "string",
      "pattern": ".*?\\/data\\.schema\\.json$"
    },
    "more_to_come": {
      "type": "boolean"
    },
    "tasks": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [ "ongoing", "stopped", "done", "pending", "improve" ]
          },
          "progress": {
            "type": "number",
            "minLength": 1
          },
          "progress_change": {
            "type": "number",
            "minLength": 1
          },
          "progress_goal": {
            "type": "number",
            "minLength": 1
          },
          "progress_element": {
            "type": "string",
            "minLength": 1
          },
          "progress_direction": {
            "type": "string",
            "enum": [ "+", "-" ]
          },
          "progress_precision": {
            "type": [ "boolean", "string" ],
            "enum": [ true, false, "less", "more" ]
          },
          "progress_goal_precision": {
            "$ref": "#/properties/tasks/items/properties/progress_precision"
          },
          "last_update": {
            "type": "string",
            "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
          },
          "emoji": {
            "type": "string",
            "pattern": "^[^\\n\\s\\w]{1,2}$"
          },
          "subtasks": {
            "$ref": "#/properties/tasks"
          }
        }
      }
    }
  }
}