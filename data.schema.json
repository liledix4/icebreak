{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["$schema", "more_to_come", "tasks"],
  "properties": {
    "$schema": {
      "type": "string",
      "pattern": ".*?\\/data\\.schema\\.json$"
    },
    "more_to_come": {
      "type": "boolean"
    },
    "tasks": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["title"],
        "additionalProperties": false,
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": [ "ongoing", "stopped", "done", "pending", "improve" ]
          },
          "progress": {
            "type": "string",
            "minLength": 1
          },
          "progress_precision": {
            "type": "boolean"
          },
          "last_update": {
            "type": "string",
            "pattern": "^\\d{4}\\.\\d{2}\\.\\d{2}$"
          },
          "emoji": {
            "type": "string",
            "pattern": "^(\u00a9|\u00ae|[\u2000-\u3300]|\ud83c[\ud000-\udfff]|\ud83d[\ud000-\udfff]|\ud83e[\ud000-\udfff])"
          },
          "subtasks": {
            "$ref": "#/properties/tasks"
          }
        }
      }
    }
  }
}